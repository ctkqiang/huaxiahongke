<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/purple_700"> <!-- 半透明绿色Ripple -->

    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/purple_700" /> <!-- mask也绿 -->
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#001100" /> <!-- 正常背景：深绿黑 -->
            <stroke android:width="2dp" android:color="@color/purple_700"/> <!-- 霓虹绿边 -->
            <corners android:radius="1dp" />
        </shape>
    </item>

</ripple>
